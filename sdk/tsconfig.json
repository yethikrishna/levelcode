{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "allowImportingTsExtensions": false,
    "types": ["node", "bun-types"],
    "baseUrl": ".",
    "paths": {
      "@levelcode/common/*": ["../common/src/*"],
      "@levelcode/agent-runtime/*": ["../packages/agent-runtime/src/*"],
      "@levelcode/code-map": ["../packages/code-map/src/index.ts"],
      "@levelcode/code-map/*": ["../packages/code-map/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
