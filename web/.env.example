# =============================================================================
# LevelCode Web App - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values

# --- Required ---

# PostgreSQL database connection string
DATABASE_URL=postgresql://user:password@host:5432/levelcode

# NextAuth.js secret for session signing (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-secret-here

# NextAuth.js URL (your app URL)
NEXTAUTH_URL=https://levelcode.vercel.app

# GitHub OAuth (create at https://github.com/settings/developers)
LEVELCODE_GITHUB_ID=your-github-oauth-client-id
LEVELCODE_GITHUB_SECRET=your-github-oauth-client-secret

# OpenRouter API key (for LLM proxy - get at https://openrouter.ai/keys)
OPEN_ROUTER_API_KEY=sk-or-v1-...

# --- App URL ---
NEXT_PUBLIC_LEVELCODE_APP_URL=https://levelcode.vercel.app

# --- Optional: Payments ---
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET_KEY=
STRIPE_USAGE_PRICE_ID=
STRIPE_TEAM_FEE_PRICE_ID=
STRIPE_SUBSCRIPTION_100_PRICE_ID=
STRIPE_SUBSCRIPTION_200_PRICE_ID=
STRIPE_SUBSCRIPTION_500_PRICE_ID=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
NEXT_PUBLIC_STRIPE_CUSTOMER_PORTAL=

# --- Optional: Analytics ---
NEXT_PUBLIC_POSTHOG_API_KEY=
NEXT_PUBLIC_POSTHOG_HOST_URL=https://app.posthog.com

# --- Optional: Email ---
LOOPS_API_KEY=

# --- Optional: Discord Bot ---
DISCORD_BOT_TOKEN=
DISCORD_APPLICATION_ID=
DISCORD_PUBLIC_KEY=

# --- Optional: Search ---
LINKUP_API_KEY=
CONTEXT7_API_KEY=

# --- Optional: Ads ---
GRAVITY_API_KEY=

# --- Optional: Google ---
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION_ID=
